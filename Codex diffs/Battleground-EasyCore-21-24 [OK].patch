+	if( bg == nullptr )
+		return SCRIPT_CMD_SUCCESS;
+
+	for( const auto& member : bg->members ){
+		if( member.sd == nullptr )
+			continue;
+
+		if( visible ){
+			clif_bg_xy(member.sd);
+			clif_bg_hp(member.sd);
+		}else{
+			clif_bg_xy_remove(member.sd);
+		}
+	}
+
+	return SCRIPT_CMD_SUCCESS;
+}
